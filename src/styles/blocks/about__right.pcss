.about__right{
    width: 60%;
    color: #a1a2a2;
    h2{
        color: #fff;
        font-size: 40px;
        font-weight: 800;
        padding: 4% 0;
    }
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    @include tablets{
        width:50%;
        margin-left: 50px;
    }
    @include phones{
        width: 100%;
        margin-top: 10%;
    }
}